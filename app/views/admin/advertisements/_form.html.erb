<%= form_with model: [:admin, advertisement], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Ad Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :placement, "Placement", class: "form-label" %>
    <%= f.select :placement, Advertisement.placements.keys.map { |p| [p.titleize, p] },
                 {}, class: "form-select", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :link, "Link (Optional)", class: "form-label" %>
    <%= f.url_field :link, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :image, "Image", class: "form-label" %>
    <% if advertisement.image.attached? %>
      <div class="mb-2">
        <%= image_tag advertisement.image.variant(resize_to_limit: [300, 150]), class: "img-thumbnail" %>
      </div>
    <% end %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <% if advertisement.image.attached? %>
    <div class="form-check mb-2">
      <%= f.check_box :remove_image, { class: "form-check-input" } %>
      <%= f.label :remove_image, "Remove existing image", class: "form-check-label" %>
    </div>
  <% end %>

  <div class="mb-3 form-check">
    <%= f.check_box :active, class: "form-check-input" %>
    <%= f.label :active, "Active", class: "form-check-label" %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>