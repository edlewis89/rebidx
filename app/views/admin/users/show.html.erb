<div class="container mt-4">
  <h2>User Details</h2>
  <hr>

  <table class="table table-bordered">
    <tr>
      <th>Name</th>
      <td><%= @user.name.presence || "â€”" %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>Role</th>
      <td><%= @user.role.humanize %></td>
    </tr>
    <% if @user.service_provider_profile.present? %>
      <tr>
        <th>Business Name</th>
        <td><%= @user.service_provider_profile.business_name %></td>
      </tr>
      <tr>
        <th>Verified</th>
        <td>
          <% if @user.service_provider_profile.verified? %>
            <span class="badge bg-success">Yes</span>
          <% else %>
            <span class="badge bg-secondary">No</span>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>Services Offered</th>
        <td><%= @user.service_provider_profile.services.map(&:name).join(", ") %></td>
      </tr>
    <% end %>
    <tr>
      <th>Joined</th>
      <td><%= @user.created_at.strftime("%b %d, %Y") %></td>
    </tr>
  </table>

  <div class="mt-3">
    <%= link_to "Edit User", edit_admin_user_path(@user), class: "btn btn-warning" %>
    <%= link_to "Back to Users", admin_users_path, class: "btn btn-secondary" %>
  </div>
</div>