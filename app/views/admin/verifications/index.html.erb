<div class="container mt-4">
  <h2 class="fw-bold mb-3">Verification Queue</h2>

  <table class="table table-hover align-middle">
    <thead class="table-light">
    <tr>
      <th>User</th>
      <th>Email</th>
      <th>Status</th>
      <th>Trust Score</th>
      <th>Checks Passed</th>
      <th>Last Updated</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user.name || profile.user.email %></td>
        <td><%= profile.user.email %></td>

        <td>
            <span class="badge bg-<%= status_color(profile.status) %>">
              <%= profile.status.titleize %>
            </span>
        </td>

        <td><%= profile.trust_score || 0 %></td>

        <td>
          <%= profile.verification_checks.passed.count %> /
          <%= profile.verification_checks.count %>
        </td>

        <td><%= time_ago_in_words(profile.updated_at) %> ago</td>

        <td>
          <%= link_to "Review", admin_verification_path(profile), class: "btn btn-sm btn-outline-primary" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
