<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="fw-bold mb-4">Place a Bid for: <%= @listing.title %></h2>
      <p class="text-muted mb-4"><%= @listing.description %></p>

      <%= form_with model: [@listing, @bid], local: true do |f| %>
        <!-- Bid Amount -->
        <div class="mb-3">
          <%= f.label :amount, "Bid Amount (USD)", class: "form-label" %>
          <%= f.number_field :amount,
                             step: 0.01,
                             min: 0,
                             class: "form-control",
                             placeholder: "Enter your bid amount",
                             required: true %>
        </div>

        <!-- Message to Homeowner -->
        <div class="mb-3">
          <%= f.label :message, "Message to Homeowner (Optional)", class: "form-label" %>
          <%= f.text_area :message,
                          class: "form-control",
                          rows: 3,
                          placeholder: "Write a brief note to the homeowner (optional)" %>
        </div>

        <!-- Terms / Notes -->
        <div class="mb-3">
          <%= f.label :terms, "Bid Terms / Notes", class: "form-label" %>
          <%= f.text_area :terms,
                          class: "form-control",
                          rows: 5,
                          placeholder: "Include your terms, special conditions, or timeline",
                          required: true %>
        </div>

        <div class="d-flex justify-content-end">
          <%= f.submit "Submit Bid", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>