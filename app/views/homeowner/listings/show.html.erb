<div class="container mt-4">
  <h2><%= @listing.title %></h2>

  <p><strong>Description:</strong> <%= @listing.description %></p>
  <p><strong>Type:</strong> <%= @listing.listing_type.humanize %></p>
  <p><strong>Status:</strong> <%= @listing.status.humanize %></p>
  <p><strong>Budget:</strong> <%= number_to_currency(@listing.budget) %></p>
  <p><strong>Services Required:</strong> <%= @listing.services.map(&:name).join(", ") %></p>

  <hr>

  <%= link_to "Edit Listing", edit_homeowner_listing_path(@listing), class: "btn btn-warning" %>
  <%= button_to "Delete Listing", homeowner_listing_path(@listing),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this listing?" },
                class: "btn btn-danger" %>

  <%= link_to "Back to My Listings", homeowner_listings_path, class: "btn btn-secondary ms-2" %>
</div>