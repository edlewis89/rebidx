<% flash.each do |key, message| %>
  <div class="alert
    <%= key.to_sym == :notice ? "alert-success" :
                        key.to_sym == :alert  ? "alert-danger"  :
                          "alert-info" %>
    alert-dismissible fade show"
       role="alert">

    <%= message %>

    <button type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"></button>
  </div>
<% end %>