<div class="container mt-4">
  <h2>Post a New Listing</h2>

  <%= form_with model: @listing, local: true do |f| %>
    <h5>Property Details</h5>

    <div class="mb-3">
      <%= f.label :property_id, "Select Property" %>
      <%= f.select :property_id,
                   options_for_select(@properties.map { |p| [p.title, p.id] }, @listing.property_id),
                   { include_blank: "Add New Property" },
                   class: "form-select",
                   id: "property-select" %>
    </div>

    <div id="new-property-fields">
      <div class="mb-3">
        <%= f.label :property_title, "Property Title" %>
        <%= f.text_field :property_title, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :property_address, "Address" %>
        <%= f.text_field :property_address, class: "form-control" %>
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 4, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :budget %>
      <%= f.number_field :budget, step: 0.01, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :listing_type %>
      <%= f.select :listing_type,
                   Listing.listing_types.keys.map { |k| [k.humanize, k] },
                   {}, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= f.label :services, "Services Needed" %>
      <%= f.collection_check_boxes :service_ids, @services, :id, :name do |b| %>
        <div class="form-check">
          <%= b.check_box class: "form-check-input" %>
          <%= b.label class: "form-check-label" %>
        </div>
      <% end %>
    </div>

    <%= f.submit "Post Listing", class: "btn btn-primary" %>
  <% end %>

  <% if @listing.persisted? %>
    <hr>
    <%= button_to "Delete Listing",
                  listing_path(@listing),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this listing?" },
                  class: "btn btn-danger mt-3" %>
  <% end %>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const propertySelect = document.getElementById("property-select");
        const newPropertyFields = document.getElementById("new-property-fields");

        function toggleNewPropertyFields() {
            if (propertySelect.value) {
                // If an existing property is selected, hide new property fields
                newPropertyFields.style.display = "none";
            } else {
                // If blank (Add New Property) is selected, show fields
                newPropertyFields.style.display = "block";
            }
        }

        // Run on page load
        toggleNewPropertyFields();

        // Run when selection changes
        propertySelect.addEventListener("change", toggleNewPropertyFields);
    });
</script>

