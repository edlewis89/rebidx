<div class="container mt-4">
  <h2 class="mb-4">Rate Provider: <%= @bid.user.service_provider_profile&.business_name || @bid.user.email %></h2>

  <div class="card p-4 shadow-sm">
    <%= form_with model: [@bid, @rating], local: false do |f| %>

      <!-- Rating Stars -->
      <div class="mb-3">
        <%= f.label :score, "Rating (1-5 stars)", class: "form-label" %>
        <%= f.select :score, options_for_select(1..5), {}, class: "form-select" %>
      </div>

      <!-- Comment -->
      <div class="mb-3">
        <%= f.label :comment, "Comments (optional)", class: "form-label" %>
        <%= f.text_area :comment, rows: 4, class: "form-control", placeholder: "Write your feedback here..." %>
      </div>

      <!-- Submit -->
      <div class="d-flex justify-content-between align-items-center">
        <%= f.submit "Submit Rating", class: "btn btn-primary" %>
        <%= link_to "Cancel", homeowner_dashboard_path, class: "btn btn-outline-secondary" %>
      </div>

    <% end %>
  </div>
</div>
